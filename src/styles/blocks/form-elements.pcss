.form__elements{
  display: flex;
  width: 75%;
  margin-bottom: 6%;
}

.form-block {
  margin-right: 50px;
  border-bottom: 1px solid #ffffff;
  padding-bottom: 14px;
  flex: 1;
  fill: $form-icon;
  &:last-child {
    margin-right: 0;
  }
  &:hover{
    border-color: $main-hover;
    fill: $main-hover;
  }
}

.form-block__title{
  margin-bottom: 21px;
  display: block;
  color: $links-color;
  opacity: .3;
  font-weight: 600;
  margin-left: 50px;
  line-height: 1.675;
}

.form-block__container {
  display: flex;
  align-items: center;

  &__align-top {
    align-items: flex-start;
  }
}

.form-block__icon {
  width: 30px;
  height: 30px;
  opacity: .3;
  margin-right: 16px;
  &:hover{
    opacity: 1;
    transition: opacity 0.4s;
  }
}

.form__contacts{
  width: 75%;
  border-bottom: 1px solid #ffffff;
  &:hover{
    border-color: $main-hover;
  }
}

.form__contacts-mrgn{
  margin-bottom: 60px;
}

.form-block__field {
  flex: 1;
}

.form-block__input {
  background: transparent;
  border: 0 none;
  width: 100%;
  color: #ffffff;
  &::placeholder {
    color: #ffffff;
    font-size: 18px;
    font-weight: 700;
  }

  &:focus {
    outline: none;
  }
}
.form-textarea{
  resize: none;
}

